@model IEnumerable<Rocky.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class=" col-6">
            <h2 class="text-primary">Prod List</h2>
        </div>
        <div class="col-6 text-lg-end ">
            <a asp-action="Upsert"  class="btn btn-primary">Create New Product</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Prod Name
                    </th>
                    <th>
                        Price
                    </th>
@*                    <th>
                        Description
                    </th>*@
                    <th>
                        Short Description
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        AppType
                    </th>
                    <th>
                        Image
                    </th>
                    <th>CRUD</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td width="10%">@item.Price</td>
                        @*<td width="20%" hight="20%">@item.Description</td>*@
                        <td width="20%">@item.ShortDesc</td>
                        <td width="20%">@item.Category.Name</td>
                        <td width="20%">@item.ApplicationType.Name</td>
                        @*<td width="10%">@item.Image</td>*@
                        <td width="10%">
                            <img src="@WC.ImagePath@item.Image" class="w-75 h-75" @*style="border-radius:5px; border:1px solid #bbb"*@ />
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Upsert" asp-route-Id="@item.ProductId" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square" title="Edit Category"></i>
                                </a>
                                <a asp-action="Delete" asp-route-Id="@item.ProductId" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash" title="Delete"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products exists.</p>
    }
</div>

<script>
    $(document).ready(function () {
        $('.summernote').summernote({
            height: 200
        }
        );
    });
</script>
